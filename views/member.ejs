<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="//cdn.jsdelivr.net/fontawesome/4.2.0/css/font-awesome.min.css" />
  <link href='https://fonts.googleapis.com/css?family=Slabo+27px|Open+Sans' rel='stylesheet' type='text/css'>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <%- include navbar.ejs %>
  <div class="main">
    <div class="container" id="">
      <% if (message) { %>
      <div class="info-alert">
        <p>User successfully updated!</p>
      </div>
      <% } %>

      <h2>Members</h2>
      <a href="/user/add"><button class="add-user">+Add</button></a>
      <table class="user-table">
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Share</th>
        </tr>
        <% for(var i=0; i < userdatas.length; i++) { %>
        <tr>
          <td>
            <%= i + 1 %>
          </td>
          <td>
            <%= userdatas[i].username %>
          </td>
          <td><a href="/permission/<%= userdatas[i].userid %>" class="btn btn-info">Permission</a></td>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</body>

</html>